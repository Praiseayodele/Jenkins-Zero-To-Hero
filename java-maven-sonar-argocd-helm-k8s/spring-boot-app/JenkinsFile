pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "praiseayodele/ultimate-cicd:9"
    }

    stages {
        stage('Checkout') {
            steps {
                // This ensures Jenkins has your repo and the .git folder
                checkout scm
            }
        }

        stage('Build and Sonar Analysis') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh 'mvn clean verify sonar:sonar'
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    sh "docker build -t ${DOCKER_IMAGE} ."
                    withDockerRegistry([credentialsId: 'DOCKERHUB_CREDENTIALS', url: 'https://index.docker.io/v1/']) {
                        sh "docker push ${DOCKER_IMAGE}"
                    }
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                // This must point to the folder where your .git exists
                dir('java-maven-sonar-argocd-helm-k8s') {
                    withCredentials([string(credentialsId: 'GITHUB_TOKEN', variable: 'GITHUB_TOKEN')]) {
                        sh '''
                        git config user.email "mrpraiseayodele@gmail.com"
                        git config user.name "Praise"
                        
                        # Update your deployment file
                        sed -i "s|image: .*|image: praiseayodele/ultimate-cicd:9|" k8s/deployment.yaml
                        
                        git add k8s/deployment.yaml
                        git commit -m "Update deployment to image ${DOCKER_IMAGE}" || echo "No changes to commit"
                        git push https://${GITHUB_TOKEN}@github.com/yourusername/yourrepo.git main
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up Docker containers if any'
            sh 'docker ps -aq | xargs -r docker rm -f'
        }
    }
}
